<%- model_class = Round -%>
<div class="page-header">
  <h1><%=t '.title', :default => Round %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:movie) %></dt>
      <dd><pre class="prettyprint"><%= @round.movie %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:score) %></dt>
      <dd><pre class="prettyprint"><%= @round.score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rounds_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_round_path(@round), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              round_path(@round),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

