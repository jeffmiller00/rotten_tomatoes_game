<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => Game %></h1>
</div>

<%= form_tag({controller: 'games', action: 'create'}, method: 'post', class: 'form-horizontal form-model') do %>

  <% @players.each do |player| %>
    <%= text_field_tag 'players[]', player %><br /><br />
  <% end %>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= submit_tag 'Create Game', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
